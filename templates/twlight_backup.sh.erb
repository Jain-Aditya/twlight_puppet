#!/usr/bin/env bash

PATH=/usr/local/bin:/usr/bin:/bin:/sbin:$PATH

dom=$(date -d "$D" '+%d')
root_dir=<%= @root_dir %>

## Dump DB
source ${root_dir}/bin/twlight_mysqldump.sh

mysqldump_dir=<%= @mysqldump_dir %>
backup_dir=<%= @backup_dir %>
echo "Backing up database and media"

## Perform backup
tar -czf "${backup_dir}/${dom}.tar.gz" -C "${mysqldump_dir}" "./twlight.sql" -C "${root_dir}" "./media"

## Root only
chmod 0600 "${backup_dir}/${dom}.tar.gz"

echo "Finished TWLight backup."
