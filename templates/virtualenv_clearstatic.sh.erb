#!/usr/bin/env bash

# Generate right to left css
node <%= @twlight_root_dir %>/bin/twlight_cssjanus.js

# Load virtual environment
source <%= @twlight_root_dir %>/bin/virtualenv_activate.sh

# Ensure collectedstatic dir exists
mkdir -p <%= @twlight_root_dir %>/TWLight/collectedstatic

# Clear and collect css
echo "collectstatic --noinput --clear"
python manage.py collectstatic --noinput --clear
