upstream appserver {
    server unix:/var/www/html/TWLight/run/gunicorn.sock fail_timeout=0;
}

server {
    listen <%= @twlight_serverport %>;
    listen [::]:<%= @twlight_serverport %>;
    server_name <%= @twlight_servername %>;
    root /var/www/html/TWLight/;
    client_max_body_size 4G;
    proxy_intercept_errors on;


    location /500-dog.jpeg {
        root /var/www/html/TWLight/TWLight/templates/500/;
    }

    location /500-Wikipedia_Library_owl.svg {
        root /var/www/html/TWLight/TWLight/templates/500/;
    }

    location ~ .+/((500-Wikipedia_Library_owl\.svg)|(500-dog\.jpeg))$ {
        try_files $uri /$1;
    }

    error_page 500 502 503 504 /500.html;
    location /500.html {
        internal;
        root /var/www/html/TWLight/TWLight/templates/500/;
    }

    location /static/ {
        # checks for static file, if not found proxy to app
        alias /var/www/html/TWLight/TWLight/collectedstatic/;
    }

    location /admin {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Host $host:<%= @twlight_externalport %>;
        proxy_redirect off;

        proxy_pass   http://appserver;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;

        proxy_pass   http://appserver;
    }

}
