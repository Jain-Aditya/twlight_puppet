#!/usr/bin/env bash

# Fetch latest code from master
cd /var/www/html/TWLight
git checkout .
git pull origin <%= @twlight_git_revision %>

# update pip dependencies
bash /var/www/html/TWLight/bin/virtualenv_pip_update.sh

# Run migrations.
bash /var/www/html/TWLight/bin/virtualenv_migrate.sh

# Compile translations
bash /var/www/html/TWLight/bin/virtualenv_translate.sh
