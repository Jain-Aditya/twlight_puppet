#!/bin/bash

# Bail if gunicorn is running
systemctl is-active gunicorn >/dev/null 2>&1 && exit 1;

cd /home/<%= @twlight_unixname %>
virtualenv TWLight
source /home/<%= @twlight_unixname %>/TWLight/bin/activate
export DJANGO_SETTINGS_MODULE=TWLight.settings.<%= @twlight_environment %>
pip install -r /var/www/html/TWLight/requirements/wmf.txt
cd /var/www/html/TWLight
echo "migrate"
python manage.py migrate
echo "createinitialrevisions"
python manage.py createinitialrevisions
# Perform any missing migrations
echo "makemigrations"
python manage.py makemigrations
echo "migrate"
python manage.py migrate
# Compile translations
echo "makemessages"
python manage.py makemessages --locale=ar
python manage.py makemessages --locale=fi
python manage.py makemessages --locale=fr
python manage.py makemessages --locale=iw
echo "compilemessages"
python manage.py compilemessages
echo "collectstatic --noinput"
python manage.py collectstatic --noinput
echo "to create superuser run 
python manage.py createsuperuser --username \$username --email \$email"
